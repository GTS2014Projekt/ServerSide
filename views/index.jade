        header List: Geo-Fencing with Beacons
        #list
            table
                thead
                    th MAC-Adresse
                    th Benuzter
                    th registriert
                    th TIMESTAMP
                    th l√∂schen
                tbody
        // /LIST

        // UPDATE USER
        header Benutzernamen setzen
        #updateUser
            fieldset
                input#inputMacAdress(type='text', placeholder='AA:AA:AA:AA:AA:AA')
                input#inputUser(type='text', placeholder='Benutzernamen')
